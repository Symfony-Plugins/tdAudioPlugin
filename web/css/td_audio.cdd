#audio {
    list-style-type: none;
}

#audio li {
    border: 1px solid #bbb;
    margin: 10px;
    padding: 5px;
    background-color: #eee;
}

#audio div {
    margin: 2px;
}

#audio span.title {
    font-variant: small-caps;
}

#audio div.link a {
    font-variant: small-caps;
}

#audio div {
    text-align: justify;
}

#audio div.description {
    text-indent: 20px;
}
